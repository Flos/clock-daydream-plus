<!-- Special "screen saver mode" with just the time/date on black. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Extra layout to let the clock float in the window -->
    <!-- TODO: Find a way to always be able to fit the view on the screen, whatever size selected. -->
    <LinearLayout
        android:id="@+id/main_clock"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <include layout="@layout/desk_clock_time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ca.mlaflamme.clocktime.AnalogClock
            android:id="@+id/analog_clock"
            android:layout_width="@dimen/analog_clock_diameter"
            android:layout_height="@dimen/analog_clock_diameter"
            dc:jewelRadius="5dp"
            dc:jewelOffset="23dp"
            dc:jewelColor="@color/clock_white"
            android:dial="@drawable/clock_analog_dial_mipmap"
            android:hand_hour="@drawable/clock_analog_hour_mipmap"
            android:hand_minute="@drawable/clock_analog_minute_mipmap"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:singleLine="true">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clock_white"
                style="@style/label_not_caps"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/nextAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_alarm_small"
                android:textColor="@color/clock_gray"
                style="@style/label_not_caps"
                android:visibility="gone"
                android:paddingLeft="@dimen/clock_padding"
                android:gravity="center"
                android:singleLine="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clock_gray"
            style="@style/label_not_caps"
            android:singleLine="true"/>

        <ca.mlaflamme.clocktime.notification.NotificationLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifLayout"
            android:singleLine="true"/>

    </LinearLayout>
</LinearLayout>